#!/bin/sh

###########
# STARTUP #
###########

. "$HOME/.config/river/variables"

killall waybar
riverctl spawn waybar &

killall swaync
riverctl spawn swaync &

swww kill
swww-daemon
# swww img "$HOME/.config/wallpapers/streetcleaner.jpg"

exec mpd &

riverctl spawn $terminal --title="music_controller.sh" -e "zsh -ci music_controller.sh" &
riverctl spawn $browser &
riverctl spawn $terminal --title="general" -e "zsh -ci 'tmux new-session -s general'" &
riverctl spawn $terminal --title="btop" -e "btop" &

riverctl set-focused-tags "$(get_tag 3)"
