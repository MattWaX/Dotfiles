#!/bin/sh

###########
# STARTUP #
###########

. "$HOME/.config/river/variables"

killall waybar
riverctl spawn waybar &

killall swaync
riverctl spawn swaync &

swww kill
swww-daemon
# swww img "$HOME/.config/wallpapers/streetcleaner.jpg"

exec mpd &

(exec $terminal --class="music_controller.sh" --title="music_controller.sh" -e ~/.scripts/music_controller.sh) &
(exec "$HOME/.scripts/browser_select") &
(exec $terminal --class="general" --title="general" -e tmux new-session -s general) &
# (exec $terminal --class="Btop" --title="Btop" -e btop) &

tmux new -ds mails 'while true; do; aerc; done' &

riverctl set-focused-tags "$(get_tag 3)"
